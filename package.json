{
  "name": "tarasa-historic-extractor",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    ".",
    "ui/dashboard"
  ],
  "scripts": {
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "scrape": "ts-node src/scraper/scraper.ts",
    "classify": "ts-node src/ai/classifier.ts",
    "generate": "ts-node src/ai/generator.ts",
    "message": "ts-node src/messenger/messenger.ts",
    "prisma:generate": "npx prisma generate --schema=src/database/schema.prisma",
    "prisma:migrate": "npx prisma migrate deploy --schema=src/database/schema.prisma",
    "dashboard:dev": "npm run --workspace=tarasa-dashboard dev",
    "dashboard:build": "npm run --workspace=tarasa-dashboard build"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "@prisma/client": "^6.19.0",
    "playwright": "^1.56.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.25",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
