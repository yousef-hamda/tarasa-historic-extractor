generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("DATABASE_URL")
}

model PostRaw {
  id          Int                @id @default(autoincrement())
  groupId     String
  fbPostId    String             @unique
  authorName  String?
  authorLink  String?
  text        String
  scrapedAt   DateTime           @default(now())
  authorPhoto String?
  generated   MessageGenerated[]
  messages    MessageSent[]
  classified  PostClassified?

  @@index([groupId])
  @@index([scrapedAt])
}

model PostClassified {
  id           Int      @id @default(autoincrement())
  postId       Int      @unique
  isHistoric   Boolean
  confidence   Int
  reason       String
  classifiedAt DateTime @default(now())
  post         PostRaw  @relation(fields: [postId], references: [id])

  @@index([isHistoric, confidence])
  @@index([classifiedAt])
}

model MessageGenerated {
  id          Int      @id @default(autoincrement())
  postId      Int
  messageText String
  link        String
  createdAt   DateTime @default(now())
  post        PostRaw  @relation(fields: [postId], references: [id])

  @@index([postId])
  @@index([createdAt])
}

model MessageSent {
  id         Int           @id @default(autoincrement())
  postId     Int
  authorLink String
  status     MessageStatus @default(pending)
  sentAt     DateTime      @default(now())
  error      String?
  retryCount Int           @default(0)
  post       PostRaw       @relation(fields: [postId], references: [id])

  @@unique([postId, authorLink])
  @@index([status])
  @@index([sentAt])
  @@index([postId, status])
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  type      LogType
  message   String
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model SessionState {
  id           Int           @id @default(autoincrement())
  status       SessionStatus @default(unknown)
  lastChecked  DateTime      @default(now())
  lastValid    DateTime?
  errorMessage String?
  userId       String?
  userName     String?
  expiresAt    DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([status])
  @@index([lastChecked])
}

model GroupInfo {
  id           Int          @id @default(autoincrement())
  groupId      String       @unique
  groupType    GroupType    @default(unknown)
  groupName    String?
  memberCount  Int?
  lastChecked  DateTime     @default(now())
  lastScraped  DateTime?
  accessMethod AccessMethod @default(none)
  isAccessible Boolean      @default(true)
  errorMessage String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([groupType])
  @@index([accessMethod])
}

enum MessageStatus {
  pending
  sent
  error
}

enum LogType {
  scrape
  classify
  message
  auth
  error
}

enum SessionStatus {
  valid
  expired
  invalid
  refreshing
  blocked
  unknown
}

enum GroupType {
  public
  private
  unknown
}

enum AccessMethod {
  mbasic
  apify
  playwright
  none
}
