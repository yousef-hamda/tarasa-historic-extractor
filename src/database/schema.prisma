generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("DATABASE_URL")
}

enum MessageStatus {
  pending
  sent
  error
}

enum LogType {
  scrape
  classify
  message
  auth
  error
}

model PostRaw {
  id          Int               @id @default(autoincrement())
  groupId     String
  fbPostId    String            @unique
  authorName  String?
  authorLink  String?
  text        String
  scrapedAt   DateTime          @default(now())
  classified  PostClassified?
  generated   MessageGenerated[]
  messages    MessageSent[]

  @@index([groupId])
  @@index([scrapedAt])
}

model PostClassified {
  id           Int      @id @default(autoincrement())
  postId       Int      @unique
  isHistoric   Boolean
  confidence   Int
  reason       String
  classifiedAt DateTime @default(now())
  post         PostRaw  @relation(fields: [postId], references: [id])
}

model MessageGenerated {
  id          Int      @id @default(autoincrement())
  postId      Int
  messageText String
  link        String
  createdAt   DateTime @default(now())
  post        PostRaw  @relation(fields: [postId], references: [id])

  @@index([postId])
  @@index([createdAt])
}

model MessageSent {
  id          Int           @id @default(autoincrement())
  postId      Int
  authorLink  String
  status      MessageStatus @default(pending)
  sentAt      DateTime      @default(now())
  error       String?
  post        PostRaw       @relation(fields: [postId], references: [id])

  @@index([status])
  @@index([sentAt])
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  type      LogType
  message   String
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}
