generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("DATABASE_URL")
}

model PostRaw {
  id          Int                @id @default(autoincrement())
  groupId     String
  fbPostId    String             @unique
  authorName  String?
  authorLink  String?
  text        String
  scrapedAt   DateTime           @default(now())
  authorPhoto String?
  postUrl     String?
  generated   MessageGenerated[]
  messages    MessageSent[]
  classified  PostClassified?
  quality     QualityRating?

  @@index([groupId])
  @@index([scrapedAt])
  @@index([authorName])
}

model PostClassified {
  id           Int      @id @default(autoincrement())
  postId       Int      @unique
  isHistoric   Boolean
  confidence   Int
  reason       String
  classifiedAt DateTime @default(now())
  post         PostRaw  @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([isHistoric, confidence])
  @@index([classifiedAt])
}

model MessageGenerated {
  id          Int      @id @default(autoincrement())
  postId      Int
  messageText String
  link        String
  createdAt   DateTime @default(now())
  post        PostRaw  @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([createdAt])
}

model MessageSent {
  id         Int           @id @default(autoincrement())
  postId     Int
  authorLink String
  status     MessageStatus @default(pending)
  sentAt     DateTime      @default(now())
  error      String?
  retryCount Int           @default(0)
  post       PostRaw       @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, authorLink])
  @@index([status])
  @@index([sentAt])
  @@index([postId, status])
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  type      LogType
  message   String
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model SessionState {
  id           Int           @id @default(autoincrement())
  status       SessionStatus @default(unknown)
  lastChecked  DateTime      @default(now())
  lastValid    DateTime?
  errorMessage String?
  userId       String?
  userName     String?
  expiresAt    DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([status])
  @@index([lastChecked])
}

model GroupInfo {
  id           Int          @id @default(autoincrement())
  groupId      String       @unique
  groupType    GroupType    @default(unknown)
  groupName    String?
  memberCount  Int?
  lastChecked  DateTime     @default(now())
  lastScraped  DateTime?
  accessMethod AccessMethod @default(none)
  isAccessible Boolean      @default(true)
  errorMessage String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([groupType])
  @@index([accessMethod])
}

enum MessageStatus {
  pending
  sent
  error
}

enum LogType {
  scrape
  classify
  message
  auth
  error
  admin
}

enum SessionStatus {
  valid
  expired
  invalid
  refreshing
  blocked
  unknown
}

enum GroupType {
  public
  private
  unknown
}

enum AccessMethod {
  apify
  playwright
  none
  mbasic
}

// AI Prompt Templates for admin customization
model PromptTemplate {
  id          Int      @id @default(autoincrement())
  type        PromptType
  name        String
  content     String   @db.Text
  isActive    Boolean  @default(false)
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  @@unique([type, isActive])
  @@index([type])
  @@index([isActive])
}

enum PromptType {
  classifier
  generator
}

// Story Quality Rating
model QualityRating {
  id          Int      @id @default(autoincrement())
  postId      Int      @unique
  rating      Int      // 1-5 stars
  factors     String   @db.Text // JSON: { narrative, emotional, historical, uniqueness }
  ratedAt     DateTime @default(now())
  post        PostRaw  @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([rating])
  @@index([ratedAt])
}

// Duplicate Detection
model DuplicateGroup {
  id          Int      @id @default(autoincrement())
  primaryPostId Int
  similarity  Float    // 0-1 similarity score
  detectedAt  DateTime @default(now())
  status      DuplicateStatus @default(pending)
  posts       DuplicateMatch[]

  @@index([status])
  @@index([detectedAt])
}

model DuplicateMatch {
  id          Int      @id @default(autoincrement())
  groupId     Int
  postId      Int
  similarity  Float
  group       DuplicateGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, postId])
  @@index([postId])
}

enum DuplicateStatus {
  pending
  reviewed
  dismissed
  merged
}

// A/B Testing for Messages
model MessageVariant {
  id          Int      @id @default(autoincrement())
  name        String
  promptTemplate String @db.Text
  isActive    Boolean  @default(true)
  weight      Int      @default(50) // Percentage weight for A/B selection
  createdAt   DateTime @default(now())
  metrics     VariantMetrics?

  @@index([isActive])
}

model VariantMetrics {
  id          Int      @id @default(autoincrement())
  variantId   Int      @unique
  totalSent   Int      @default(0)
  responses   Int      @default(0)
  clicks      Int      @default(0)
  lastUpdated DateTime @updatedAt
  variant     MessageVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
}

// Weekly Reports Configuration
model ReportConfig {
  id          Int      @id @default(autoincrement())
  email       String
  frequency   ReportFrequency @default(weekly)
  isActive    Boolean  @default(true)
  lastSentAt  DateTime?
  createdAt   DateTime @default(now())

  @@index([isActive])
  @@index([frequency])
}

model ReportHistory {
  id          Int      @id @default(autoincrement())
  period      String   // e.g., "2024-W01" for weekly
  sentAt      DateTime @default(now())
  recipients  String   // JSON array of emails
  stats       String   @db.Text // JSON with report data

  @@index([sentAt])
}

enum ReportFrequency {
  daily
  weekly
  monthly
}

// User Preferences for multi-language support
model UserPreference {
  id          Int      @id @default(autoincrement())
  userId      String   @unique // Could be session ID or IP hash
  language    String   @default("en") // en, he, ar
  theme       String   @default("light")
  updatedAt   DateTime @updatedAt

  @@index([language])
}
